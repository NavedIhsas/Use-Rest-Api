@page
@model Catologs.Pages.LoginModel
@{
    ViewData["Title"] = "صفحه ورود";
    
}

<style>
    .col-md-7.col-lg-5 {
        width: 90%;
    }

    .ftco-section{
        padding:10px;
    }
</style>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<link href="~/css/login-style.css" rel="stylesheet" />
<section class="ftco-section" dir="rtl">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
               
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <div class="icon d-flex align-items-center justify-content-center">
                        <span class="fa fa-user-o"></span>
                  
                    </div>
                    <h3 class="text-center mb-4">فرم ورود</h3>
                    <form method="post" class="login-form">
                      
                        <div class="form-group d-flex" style="margin-bottom:0 !important">
                            <input asp-for="Login.Password" type="password" class="form-control rounded-left" placeholder="رمز عبور" >
                        </div>
                        <span asp-validation-for="Login.Password" class="text-danger"></span>
                        @if (Model.TempMessage == true)
                        {
                            <span class="text-danger" style="font-size:small;text-align:right">رمز عبور درست نمیباشد</span>
                        }
                        <br />
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">صفحه ورود</button>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

